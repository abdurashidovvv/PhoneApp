<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddPhoneTypes">
    <TextView
        android:id="@+id/apt_toolbar"
        android:layout_width="match_parent"
        android:background="#E5F96F"
        android:textSize="25sp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Phone types"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintTop_toTopOf="parent"/>
    <ListView
        android:id="@+id/apt_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".92"
        app:layout_constraintTop_toBottomOf="@id/apt_toolbar"/>

</androidx.constraintlayout.widget.ConstraintLayout>