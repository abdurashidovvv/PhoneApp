<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/phones_card"
        android:layout_width="160dp"
        android:layout_height="65dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_phone_types">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E5F96F"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Phones"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_phone_card"
        android:layout_width="160dp"
        android:layout_height="65dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/add_phone_types"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add phone"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="#E5F96F"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/add_phone_types"
        android:layout_width="160dp"
        android:layout_height="65dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/phones_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_phone_card">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Phone types"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="#E5F96F"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>